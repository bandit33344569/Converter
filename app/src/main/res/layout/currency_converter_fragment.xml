<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CurrencyConverterFragment">

    <Spinner
        android:id="@+id/spinnerCurrencyFrom"
        android:layout_width="214dp"
        android:layout_height="58dp"
        android:layout_marginTop="180dp"
        android:prompt="@string/select_currency_from"
        app:layout_constraintEnd_toStartOf="@id/spinnerCurrencyTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCurrencyTo"
        android:layout_width="198dp"
        android:layout_height="58dp"
        android:layout_marginTop="180dp"
        android:prompt="@string/select_currency_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/spinnerCurrencyFrom"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="406dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:hint="@string/enter_amount_to_convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerCurrencyFrom" />

    <Button
        android:id="@+id/buttonConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/convert_currency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>