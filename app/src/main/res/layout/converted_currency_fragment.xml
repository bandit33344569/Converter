<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ConvertedCurrencyFragment">

    <TextView
        android:id="@+id/ConvertedValueText"
        android:layout_width="301dp"
        android:layout_height="104dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="228dp"
        android:singleLine="true"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/CurrenceToConverted"
        android:layout_width="158dp"
        android:layout_height="58dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/ConvertedValueText"
        app:layout_constraintTop_toTopOf="@id/ConvertedValueText" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="72dp"
        android:text="@string/ButtonBack"
        app:layout_constraintStart_toStartOf="@id/CurrenceToConverted"
        app:layout_constraintTop_toTopOf="@id/CurrenceToConverted" />

</androidx.constraintlayout.widget.ConstraintLayout>